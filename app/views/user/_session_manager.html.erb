<% if current_user %>
    <div class="ml-3 relative">
        <div class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" 
                role="menu" 
                aria-orientation="vertical" 
                aria-labelledby="user-menu-button" 
                tabindex="-1"
                x-show="open" @click.away="open = false">
        <!-- Active: "bg-gray-100", Not Active: "" -->
            <%= current_user.name %>
            <a href="#" class="block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1" id="user-menu-item-0">Your Profile</a>
            <%= link_to "Settings", edit_user_registration_path, class: "block px-4 py-2 text-sm text-gray-700"  %>
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "block px-4 py-2 text-sm text-gray-700"  %>
        </div>
    </div>
<% else %>
    <%= link_to "Sign Up", new_user_registration_path, class: "bg-yellow-400 text-white px-3 py-2 rounded-md text-sm font-medium" %>
    <%= link_to "login", new_user_session_path, class: "bg-yellow-400 text-white px-3 py-2 rounded-md text-sm font-medium" %>
<% end %>